<h2 class="title"> <%= @product.name %> </h2>

<div class="row">
  <div class="col-md-7">
    <img style="width: 100%" src="https://placeholdit.imgix.net/~text?txtsize=28&txt=300%C3%97300&w=300&h=300" alt="" />
  </div>

  <div class="col-md-5">
    <div class="">
      <h3><%= @product.name %></h3>
      <p><%= number_to_currency(@product.regular_price) %></p>
      <p><%= @product.sku %></p>
      <p><%= @product.description %></p>
      <p><%= link_to "Add To Cart", add_item_path(@product), method: :post, class: 'btn btn-primary' %></p>
    </div>

    <h4>Reviews </h4>

    <%= form_for [@product, @product.reviews.build] do |f| %>
      <%= f.label :stars %>
      <%= f.text_field :stars, class: 'form-control'%> <br>
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control'%> <br>
      <%= f.submit class: 'btn btn-primary' %> <br>
    <% end %>

    <% for review in @product.reviews do %>
      <% if review.user %>
        <div class="">
          <p><%= review.user.username %> said <%= time_ago_in_words(review.created_at) %> ago</p>
          <p><% review.stars.times do %>
            <i class="fa fa-star"></i>
            <% end %>
          </p>
          <p><%= review.content %></p>
        </div>
        <hr>

      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-7">

  </div>
</div>
