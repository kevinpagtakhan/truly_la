<%= form_for @product do |f| %>
  <div class="col-md-6">
    <%= f.label :name%>
    <%= f.text_field :name, class: 'form-control' %> <br>
    <%= f.label :sku, "SKU" %>
    <%= f.text_field :sku, class: 'form-control' %> <br>

    <% unless @product.user %>

      <%= f.label :user_id, "Supplier" %>
      <% supplier_options = User.where(role: 2).map { |s| [s.username.capitalize, s.id] } %>
      <%= f.select(:user_id, options_for_select(supplier_options), {}, {required: true, class: 'form-control'}) %> <br>

    <% end %>

    <%= f.label :inventory %>
    <%= f.number_field :inventory, class: 'form-control' %> <br>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, class: 'form-control' %> <br>

    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="col-md-6">
    <%= f.label :wholesale_price, "Wholesale Price" %>
    <%= f.text_field :wholesale_price, class: 'form-control' %> <br>
    <%= f.label :regular_price, "Regular Price" %>
    <%= f.text_field :regular_price, class: 'form-control' %> <br>
    <%= f.label :sale_price, "Sale Price" %>
    <%= f.text_field :sale_price, class: 'form-control' %> <br>

    <%= f.label :height %>
    <%= f.text_field :height, class: 'form-control' %> <br>
    <%= f.label :width %>
    <%= f.text_field :width, class: 'form-control' %> <br>
    <%= f.label :depth %>
    <%= f.text_field :depth, class: 'form-control' %> <br>
    <%= f.label :weight %>
    <%= f.text_field :weight, class: 'form-control' %> <br>
  </div>

  <div class="col-md-12">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
