<h1>Sessions#sm_new</h1>
<p>Find me in app/views/sessions/sm_new.html.erb</p>

<%= form_for :session, :url => sm_login_path do |f| %>
  <%= f.label :username, "Username" %>
  <%= f.text_field :username %><br>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %><br>
  <%= f.submit "Login" %>
<% end %>
