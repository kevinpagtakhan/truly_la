<div class="top-header container-fluid">
  <div class="">
    <div class="col-sm-6 text-left">
      <span> Welcome to Truly LA </span> |
      <span> Help </span> |
      <span> FAQ </span> |
      <span> <i class="fa fa-envelope"></i> Newsletter </span>
    </div>
    <div class="col-sm-6 text-right">
      <span> <%= "Hello, " + current_user.username.upcase if current_user %> </span> |
      <span> Wishlist </span> |
      <span>
        <i class="fa fa-facebook"></i>
        <i class="fa fa-twitter"></i>
        <i class="fa fa-instagram"></i>
        <i class="fa fa-vimeo"></i>
      </span>
    </div>
  </div>
</div>

<div class="container-full">
  <div class="navbar-container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <%= link_to root_path do %>
              <%= image_tag 'truly-la.png', {class: 'logo'} %>
            <% end %>
          </a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><%= link_to "About", "#"%></li>
            <% if current_user && current_user.role = 3 %>
            <li><%= link_to "Users", users_path %></li>
            <% end %>
            <li> <%= link_to "Products", products_path %> </li>
            <li> <%= link_to "Orders", user_orders_path(current_user) if current_user %> </li>
            <li><%= link_to "Contact", "#"%></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li> <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> My Account
                <% end %>
              </li>
              <li><%= link_to cart_path do %>
                <i class="fa fa-shopping-cart"></i> Cart <%= cart_count.to_s %>
                <% end %>
              </li>
              <li><%= link_to logout_path do %>
                <i class="fa fa-sign-out"></i> Log out
                <% end %>
              </li>
            <% else %>
              <li><%= link_to cart_path do %>
                <i class="fa fa-shopping-cart"></i> Cart <%= cart_count.to_s %>
                <% end %>
              </li>
              <li><%= link_to new_user_path do %>
                <i class="fa fa-user-plus"></i> Register
                <% end %>
              </li>
              <li><%= link_to login_path do %>
                <i class="fa fa-sign-in"></i> Log in
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</div>
