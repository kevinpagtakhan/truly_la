<!DOCTYPE html>
<html>
<head>
  <title>TrulyLa</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    Hello, <%= current_user.username %>! <%= link_to "Logout", logout_path %>
    <ul>
      <li> <%= link_to "Users", users_path %> </li>
      <li> <%= link_to "Products", products_path %> </li>
    </ul>
  <% else %>
    Welcome! <%= link_to "Login", login_path %> | <%= link_to "Sign up", new_user_path %>
  <% end %>

  <%= link_to "Cart: " + cart_count.to_s, cart_path %>

  <%= yield %>

</body>
</html>
